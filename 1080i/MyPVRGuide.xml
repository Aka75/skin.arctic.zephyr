<?xml version="1.0" encoding="UTF-8"?>
<window>
    <allowoverlay>yes</allowoverlay>
    <background>0</background>
    <defaultcontrol always="true">10</defaultcontrol>
    <views>10</views>
    <controls>
        <include>GlobalBackground</include>
        <include>Furniture_Header</include>
        <include>Furniture_Clock</include>
        
        <control type="group">
            <visible>Control.IsVisible(10)</visible>
            <include>Animation.Common</include>
            <left>SidePad</left>
            <right>SidePad</right>
            <top>PosterPad</top>
            <height>640</height>
            <control type="image">
                <left>-8</left>
                <right>-8</right>
                <top>-8</top>
                <bottom>-8</bottom>
                <texture colordiffuse="Panel" border="16">common/rounded-shadow8.png</texture>
            </control>
            
            <control type="group">
                <top>500</top>
                <bottom>10</bottom>
                <left>30</left>
                <right>30</right>
                <control type="label">
                    <top>0</top>
                    <aligny>center</aligny>
                    <height>64</height>
                    <font>SmallBold</font>
                    <textcolor>White100</textcolor>
                    <selectedcolor>White100</selectedcolor>
                    <label>$INFO[ListItem.Genre]</label>
                </control>
                <control type="textbox">
                    <top>50</top>
                    <height>70</height>
                    <align>justify</align>
                    <font>Tiny</font>
                    <textcolor>White100</textcolor>
                    <selectedcolor>White100</selectedcolor>
                    <label>$INFO[ListItem.Plot]</label>
                </control>
            </control>
            
            <control type="epggrid" id="10" description="EPG">     
                <left>0</left>
                <top>-60</top>
                <width>1760</width>
                <height>560</height>
                <onback>9000</onback>
                <viewtype label="19069">list</viewtype>
                <progresstexture border="5" colordiffuse="bf777777">pvr/progressline.png</progresstexture>
                <scrolltime tween="quadratic">300</scrolltime>
                <timeblocks>40</timeblocks>
                <rulerunit>6</rulerunit>
                <rulerlayout height="70" width="260">
                    <control type="label" id="2">
                        <posx>10</posx>
                        <posy>30</posy>
                        <width>200</width>
                        <align>left</align>
                        <aligny>top</aligny>
                        <font>EPGTimeline</font>
                        <label>$INFO[ListItem.Label]</label>
                        <textcolor>Dark2</textcolor>
                    </control>
                </rulerlayout>
                <channellayout height="70" width="460">
                    <control type="label">
                        <posx>90</posx>
                        <width>340</width>
                        <aligny>center</aligny>
                        <height>67</height>
                        <textcolor>White100</textcolor>
                        <label>$INFO[ListItem.ChannelName]</label>
                    </control>
                    <control type="label">
                        <centerleft>45</centerleft>
                        <width>90</width>
                        <align>center</align>
                        <aligny>center</aligny>
                        <height>67</height>
                        <textcolor>White100</textcolor>
                        <label>$INFO[ListItem.ChannelNumber]</label>
                    </control>
                </channellayout>
                <focusedchannellayout height="70" width="460">
                    
                    <control type="image">
                        <width>100%</width>
                        <height>67</height>
                        <texture border="12" colordiffuse="Highlight">common/white.png</texture>
                    </control>   
                    <control type="label">
                        <posx>90</posx>
                        <width>340</width>
                        <aligny>center</aligny>
                        <height>67</height>
                        <textcolor>White100</textcolor>
                        <label>$INFO[ListItem.ChannelName]</label>
                    </control>
                    <control type="label">
                        <centerleft>45</centerleft>
                        <width>90</width>
                        <align>center</align>
                        <aligny>center</aligny>
                        <height>67</height>
                        <textcolor>White100</textcolor>
                        <label>$INFO[ListItem.ChannelNumber]</label>
                    </control>
                </focusedchannellayout>    
                <itemlayout height="70" width="260">
                    
                    <control type="image" id="2">
                        <width>256</width>
                        <height>67</height>
                        <texture border="5">common/white.png</texture>
                        <colordiffuse>Black30</colordiffuse>
                    </control> 
                    <control type="image" id="2">
                        <width>257</width>
                        <height>67</height>
                        <texture>pvrgenre/$INFO[ListItem.Property(GenreType)].png</texture>
                        <aspectratio>scale</aspectratio>
                        <colordiffuse>5fffffff</colordiffuse>
                    </control> 
                    <control type="image">
                        <posy>6</posy>
                        <width>52</width>
                        <height>52</height>
                        <texture>special://skin/extras/icons/timer.png</texture>
                        <colordiffuse>White70</colordiffuse>
                        <visible>ListItem.HasTimer | ListItem.IsRecording</visible>
                    </control>   
                    <control type="label" id="1">
                        <posx>0</posx>
                        <height>66</height>
                        <width>285</width>
                        <textoffsetx>50</textoffsetx>
                        <textcolor>White30</textcolor>
                        <label>$INFO[ListItem.Label]</label>
                        <visible>ListItem.HasTimer | ListItem.IsRecording</visible>
                    </control>
                    <control type="label" id="1">
                        <posx>15</posx>
                        <width>226</width>
                        <height>67</height>
                        <textcolor>White30</textcolor>
                        <textoffsetx>0</textoffsetx>
                        <label>$INFO[ListItem.Label]</label>
                        <visible>!ListItem.HasTimer + !ListItem.IsRecording</visible>
                    </control>
                </itemlayout>
                <focusedlayout height="70" width="260">
    
                    <control type="image" id="2">
                        <width>256</width>
                        <height>67</height>
                        <texture border="5">common/white.png</texture>
                        <colordiffuse>Highlight</colordiffuse>
                    </control> 
                    
                    <control type="image">
                        <posy>6</posy>
                        <width>52</width>
                        <height>52</height>
                        <texture>special://skin/extras/icons/timer.png</texture>
                        <colordiffuse>White100</colordiffuse>
                        <visible>ListItem.HasTimer | ListItem.IsRecording</visible>
                    </control>   
                    <control type="label" id="1">
                        <posx>0</posx>
                        <height>66</height>
                        <width>285</width>
                        <textoffsetx>50</textoffsetx>
                        <textcolor>White100</textcolor>
                        <label>$INFO[ListItem.Label]</label>
                        <visible>ListItem.HasTimer | ListItem.IsRecording</visible>
                    </control>
                    <control type="label" id="1">
                        <posx>15</posx>
                        <width>226</width>
                        <height>67</height>
                        <textcolor>White100</textcolor>
                        <textoffsetx>0</textoffsetx>
                        <label>$INFO[ListItem.Label]</label>
                        <visible>!ListItem.HasTimer + !ListItem.IsRecording</visible>
                    </control>
                </focusedlayout>
            
            </control>
        </control>
        <control type="group">
            <visible>ControlGroup(9000).HasFocus()</visible>
            <include>GlobalOverlay</include>
        </control>
        <control type="group">
            <include>Def9000Background</include>
            <include>Def9000Arrows</include>
            <control type="grouplist" id="9000">
                <onleft>10</onleft>
                <onright>10</onright>
                <include>Def9000GroupList</include>
                <control type="button" id="28">
                    <description>Group</description>
                    <include>DefContextButton</include>
                    <align>left</align>
                </control>
                <control type="button" id="2">
                    <description>View</description>
                    <include>DefContextButton</include>
                    <align>left</align>
                </control>
                <control type="button" id="3">
                    <description>Sort</description>
                    <include>DefContextButton</include>
                    <align>left</align>
                </control>
                <control type="togglebutton" id="4">
                    <description>Direction</description>
                    <include>DefContextButton</include>
                    <align>left</align>
                    <label>584</label>
                    <altlabel>585</altlabel>
                </control>
                
            </control>
        </control>
    </controls>
</window>
